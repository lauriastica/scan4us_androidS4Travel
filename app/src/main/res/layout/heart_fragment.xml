<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.scan4us.scan4travel.fragments.HeartFragment">

    <ImageView
        android:src="@drawable/ic_tomapulso_128dp"
        android:id="@+id/image"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="---"
        android:textSize="28sp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true">
    </TextView>

    <SurfaceView
        android:layout_above="@+id/txtvwStopWatch"
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="150sp" >
    </SurfaceView>

    <Button
        android:padding="0dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvwStopWatch"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Intentar pulso"/>

</RelativeLayout>